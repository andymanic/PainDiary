<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.paindiary.MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        >
        <Button
            android:id="@+id/btnCreate"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="@string/create_entry"
            />

        <Button
            android:id="@+id/btnView"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/btnCreate"
            android:text="@string/view_entries"
            />

        <Button
            android:id="@+id/btnGraph"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/btnView"
            android:text="@string/graph_entries"
            />

        <Button
            android:id="@+id/btnSettings"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/btnGraph"
            android:text="@string/view_settings"
            />

    </RelativeLayout>
</android.support.constraint.ConstraintLayout>
